<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/titleview_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/main_title_color">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_avatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="张德四"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="13737748443"
            android:textColor="#c2c7fa"
            android:textSize="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keHuLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/laycolor"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_wodekehu"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_youjiantou"
            android:gravity="center|left"
            android:text="我的客户"
            android:textColor="@color/main_text_color"
            android:textSize="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/shouShiLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/laycolor"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_shoushimima"
            android:gravity="center|left"
            android:text="手势密码"
            android:drawableRight="@mipmap/icon_youjiantou"
            android:drawablePadding="6dp"
            android:textColor="@color/main_text_color"
            android:textSize="14dp" />

        <ToggleButton
            android:id="@+id/tbtnGesture"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/selector_address_togglebutton"
            android:checked="false"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:layout_alignParentRight="true"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:id="@+id/banBenLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/laycolor"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_banbengengxin"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_youjiantou"
            android:gravity="center|left"
            android:text="版本更新"
            android:textColor="@color/main_text_color"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:gravity="center|left"
            android:text="v1.0.1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/light_text_color"
            android:textSize="14dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/fenXiangLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/laycolor"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_fenxiang"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_youjiantou"
            android:gravity="center|left"
            android:text="分享"
            android:textColor="@color/main_text_color"
            android:textSize="14dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


</LinearLayout>
