<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">


        <RelativeLayout
            android:id="@+id/itemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:id="@+id/topItem"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_gray_oval"
                    android:gravity="center"
                    android:minWidth="25dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="2017/07/01"
                    android:textColor="#282932"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_red_oval"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="逾期"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|right">


                    <TextView
                        android:id="@+id/tvOverdueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|right"
                        android:text="逾期金额234.00"
                        android:textColor="#ff4e40"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvCorpus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|right"
                        android:text="454.30"
                        android:textColor="#ff4e40"
                        android:textSize="14dp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/positionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tvPosition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_gray_oval"
                    android:gravity="center"
                    android:minWidth="25dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middleItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topItem"
                android:background="@color/main_bg"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="32dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@mipmap/icon_tebietihsi"
                    android:drawablePadding="3dp"
                    android:text="已上报征信"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:text="应还款:300.00 \t实还款:105.00 \t未款:50.00\n应还时间：2017/02/02\n实还时间：2017/07/02"
                        android:textColor="#545564"
                        android:textSize="12dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttomItem"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/middleItem"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:text="本金 300.00  |  利息 230.00"
                    android:textColor="#727482"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/tvCorpusDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|right"
                    android:text="未还金额"
                    android:textColor="#727482"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
