<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contain"
    style="@style/MatchMatch">


    <RelativeLayout
        android:id="@+id/rl_content"
        style="@style/MatchMatch"
        android:background="@mipmap/icon_login_bg2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/infoLayout"
            android:gravity="center">
        <ImageView
            android:id="@+id/iv_login_logo"
            style="@style/WrapWrap"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@mipmap/icon_login_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_mobile"
                style="@style/MatchWrap"
                android:layout_below="@+id/iv_login_logo"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/ivAccount"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_login_phone" />

                <com.sinosafe.xb.manager.widget.edit.ClearEditText
                    android:id="@+id/et_username"
                    style="@style/MatchMatch"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivAccount"
                    android:background="@null"
                    android:hint="请输入登录账号"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text=""
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:textColorHint="@color/light_text_color"
                    android:textSize="14dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#DADADA" />

            <RelativeLayout
                android:id="@+id/ll_password"
                style="@style/MatchWrap"
                android:layout_below="@+id/ll_mobile"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/ivPassword"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_login_password" />

                <com.sinosafe.xb.manager.widget.edit.ClearEditText
                    android:id="@+id/et_usePassword"
                    style="@style/MatchMatch"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivPassword"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:text=""
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:textColorHint="@color/light_text_color"
                    android:textSize="14dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#DADADA" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/infoLayout"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="66dp"
                android:layout_marginRight="66dp"
                android:background="@drawable/selector_common_button"
                android:gravity="center"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/icon_huaan_logo"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
