<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/laycolor"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@mipmap/default_image" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivPhoto"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lineSpacingExtra="5dp"
            android:maxLines="1"
            android:text="鹰眼API-轨迹查询的并发量已接近约定上限 - 百度鹰眼"
            android:textColor="#282932"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ivPhoto"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="您有使用服务上的疑问，请通过平台官网中“商务合作”咨询反馈。更多信息,欢迎关注微信公众账号("
            android:textColor="#727482"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#E5E8F2" />
</RelativeLayout>
