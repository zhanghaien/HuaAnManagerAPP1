<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="@dimen/size_4" android:bottomRightRadius="@dimen/size_0" android:topLeftRadius="@dimen/size_4" android:topRightRadius="@dimen/size_0" />
                    <stroke android:width="1px" android:color="#A2A5B2" />
                </shape>
            </item>
            <item android:bottom="@dimen/size_1" android:left="@dimen/size_1" android:top="@dimen/size_1">
                <shape>
                    <solid android:color="#E3E4E8" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="@dimen/size_4" android:bottomRightRadius="@dimen/size_0" android:topLeftRadius="@dimen/size_4" android:topRightRadius="@dimen/size_0" />
                    <stroke android:width="1px" android:color="#A2A5B2" />
                </shape>

            </item>

            <item android:bottom="@dimen/size_1" android:left="@dimen/size_1" android:top="@dimen/size_1">
                <shape>
                    <corners android:bottomLeftRadius="@dimen/size_4" android:bottomRightRadius="@dimen/size_0" android:topLeftRadius="@dimen/size_4" android:topRightRadius="@dimen/size_0" />
                    <solid android:color="@color/white" />
                </shape>

            </item>
        </layer-list>

    </item>

</selector>