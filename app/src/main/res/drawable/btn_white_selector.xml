        <shape >
            <solid android:color="@color/gray"/>
            <corners android:radius="160dp" />
        </shape>
    </item>

    <item  android:state_pressed="true">
        <shape >
            <solid android:color="@color/gray"/>
            <corners android:radius="160dp" />
        </shape>
    </item>


    <item android:state_selected="true">
        <shape >
            <solid android:color="@color/gray"/>
            <corners android:radius="160dp" />
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="@color/whites">
            </solid>
            <corners android:radius="160dp" />
        </shape>
        </item>
</selector>