<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TabLayout 字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14dp</item>
    </style>

    <!-- 水平分隔线 -->
    <style name="horizontal_line" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E5E8F2</item>
    </style>

    <!--垂直分割线-->
    <style name="DivideLineVer" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E5E8F2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--获取验证码 按钮-->
    <style name="VerificationCodeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:text">@string/get_verification_code</item>
        <item name="android:textColor">@drawable/selector_verification_code_text</item>
        <item name="android:background">@drawable/selector_verification_code_btn</item>
    </style>

    <!--普通按钮-->
    <style name="NormalButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16</item>
        <!--<item name="android:textColor">@drawable/selector_login_button_font</item>-->
        <item name="android:textColor">@color/whites</item>
        <item name="android:background">@drawable/selector_common_button</item>
    </style>

    <style name="personal_center_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/laycolor</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="personal_center_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_5</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/laycolor</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="LoanRadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/selector_loan_radiobutton</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#32323A</item>
    </style>

    <style name="DescriptionCheckBox" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:button">@null</item>
    </style>


    <style name="ConsumptionLoanRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/stages_radio_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_stages_radio</item>
    </style>

    <style name="MyImagePickerThemeFullScreen" parent="ImagePickerTheme">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

    <!-- 启动/退出activity动画 -->
    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_out</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_in</item>
    </style>

</resources>
